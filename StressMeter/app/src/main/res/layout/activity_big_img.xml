<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >


    <ImageView
        android:id="@+id/bigImgView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/app_name">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bigImgView"
        android:orientation="horizontal">
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/ui_button_cancel"
            android:onClick="onClickButtonCancel" />
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/ui_button_submit"
            android:onClick="onClickButtonSubmit" />
    </LinearLayout>

</RelativeLayout>