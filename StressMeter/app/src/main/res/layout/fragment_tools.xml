<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/text_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/darkGrey"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/caption_graph" />

    <!-- Line Chart (Hello Chart) https://github.com/lecho/hellocharts-android-->
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/text_tools"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:foregroundGravity="center" />

    <TextView
        android:id="@+id/text_summary_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/darkGrey"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/caption_summary"
        android:layout_below="@+id/chart" />

    <TextView
        android:id="@+id/csv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:background="@color/grey"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10sp"
        android:text=""
        android:layout_below="@+id/text_summary_results" />

</RelativeLayout>